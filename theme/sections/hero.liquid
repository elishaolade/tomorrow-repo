<section>
    <div class="hero__inner">
        {%- assign modules = section.blocks | where: "type", "module" -%}
        {%- for module in modules -%}
            {%- render 'hero-module', 
                image: module.settings.image,
                id: module.id, 
                text: module.settings.text, 
                link: module.settings.link,
                height_mobile: module.settings.mobile_height,
                height_desktop: module.settings.desktop_height,
                mobile_size: module.settings.background_size_mobile,
                desktop_size: module.settings.background_size_desktop,
                bg_position_mobile_y: module.settings.background_position_vertical_mobile,
                bg_position_mobile_x: module.settings.background_position_horizontal_mobile,
                bg_position_desktop_y: module.settings.background_position_vertical_desktop,
                bg_position_desktop_x: module.settings.background_position_horizontal_desktop -%}
        {%- endfor -%}
    </div>
</section>
{%- style -%}
{%- endstyle -%}
{% schema %}
{
    "name":"Hero",
    "blocks":[
        {
            "type":"module",
            "name":"Module",
            "limit":2,
            "settings":[
                {
                    "id":"image",
                    "type":"image_picker",
                    "label":"Module image"
                },
                {
                    "type": "range",
                    "id": "mobile_height",
                    "min": 100,
                    "max": 300,
                    "step": 5,
                    "unit": "px",
                    "label": "Mobile height",
                    "default": 100
                },
                {
                    "type": "range",
                    "id": "desktop_height",
                    "min": 300,
                    "max": 800,
                    "step": 5,
                    "unit": "px",
                    "label": "Desktop height",
                    "default": 300
                },
                {
                    "type": "range",
                    "id": "background_position_horizontal_mobile",
                    "min": 0,
                    "max": 100,
                    "step": 5,
                    "unit": "%",
                    "label": "Background horizontal positioning",
                    "default": 50
                },
                {
                    "type": "range",
                    "id": "background_position_vertical_mobile",
                    "min": 0,
                    "max": 100,
                    "step": 5,
                    "unit": "%",
                    "label": "Background vertical positioning",
                    "default": 50
                },
                {
                    "type": "range",
                    "id": "background_position_horizontal_desktop",
                    "min": 0,
                    "max": 100,
                    "step": 5,
                    "unit": "%",
                    "label": "Background horizontal positioning for desktop",
                    "default": 50
                },
                {
                    "type": "range",
                    "id": "background_position_vertical_desktop",
                    "min": 0,
                    "max": 100,
                    "step": 5,
                    "unit": "%",
                    "label": "Background vertical positioning for desktop",
                    "default": 50
                },
                {
                    "type": "radio",
                    "id": "background_size_mobile",
                    "label": "Mobile background size",
                    "options": [
                      {
                        "value": "cover",
                        "label": "Cover"
                      },
                      {
                        "value": "contain",
                        "label": "Contain"
                      }
                    ],
                    "default": "cover"
                },
                {
                    "type": "radio",
                    "id": "background_size_desktop",
                    "label": "Desktop background size",
                    "options": [
                      {
                        "value": "cover",
                        "label": "Cover"
                      },
                      {
                        "value": "contain",
                        "label": "Contain"
                      }
                    ],
                    "default": "cover"
                },
                {
                    "id":"link",
                    "type":"url",
                    "label":"Module link"
                },
                {
                    "id":"text",
                    "type":"text",
                    "label":"Module text"
                }
            ]
        }
    ],
    "presets":[
        {
            "name":"Hero",
            "category":"Image banner"
        }
    ]
}
{% endschema %}